@model IEnumerable<MVCSchooldbDemo.Student>

@{
    Layout = null;
}


<table id="dg"></table>
<div id="tb" style="padding: 2px 5px;">
    <div>
        Date From: <input class="easyui-datebox" style="width: 110px">
        To: <input class="easyui-datebox" style="width: 110px">
        Language:
        <select class="easyui-combobox" panelHeight="auto" style="width: 100px">
            <option value="java">Java</option>
            <option value="c">C</option>
            <option value="basic">Basic</option>
            <option value="perl">Perl</option>
            <option value="python">Python</option>
        </select>
        <a href="#" class="easyui-linkbutton" iconCls="icon-search">Search</a>
    </div>
    <div>
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="ShowAddDialog();">添加</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="">编辑</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="DeleteRecord(); ">删除</a>
    </div>
</div>
<div id="addDialog"></div>
<script type="text/javascript">
    $(document).ready(function () {
        InitGrid();
        InitAddDialog();
    });

    function InitGrid() {
        $('#dg')
            .datagrid({
                url: '@Url.Action("GetAll", "Student")',
                columns: [
                    [
                        { field: 'Sno', title: '学号', width: 100 },
                        { field: 'Sname', title: '姓名', width: 100 },
                        { field: 'Ssex', title: '性别', width: 100 },
                        { field: 'Sage', title: '年龄', width: 100 },
                        { field: 'Sdept', title: '系', width: 100 }
                    ]
                ],
                title: '学生信息',
                fitColumns: true,
                iconCls: 'icon-view',
                width: '100%',
                nowrap: true,
                autoRowHeight: false,
                striped: true,
                collapsible: true,
                pagination: true,
                pageSize: 100,
                pageList: [50, 100, 200],
                rownumbers: true,
                SortName: 'Sno', //根据某个字段给easyUI排序
                sortOrder: 'asc',
                remoteSort: false,
                ctrlSelect: true,
                toolbar: '#tb'
            });
    }

    function InitAddDialog() {
        $('#addDialog')
            .dialog({
                closed: true,
                title: '添加学生',
                href: '@Url.Action("Create", "Student")',
                width: 400
            });
    }

    function ShowAddDialog() {
        $('#addDialog').dialog('open');
    }

    function ShowEditOrViewDialog() {

    }

    function DeleteRecord() {
        var rows = $('#dg').datagrid('getSelections');
        var ids = [];
        var url = '@Url.Action("Delete", "Student")';

        if (rows) {
            $.messager.confirm('问题',
                '确认要删除选中的学生吗？',
                function (result) {
                    if (result) {
                        for (var i = 0; i < rows.length; i++) {
                            ids.push(rows[i].Sno);
                        }

                        $.ajax({
                            url: url,
                            type: 'POST',
                            data: JSON.stringify(ids),

                            contentType: 'application/json; charset=utf-8',
                            success: function (data) {
                                $("#dg").datagrid('reload');
                                console.log(data);
                            }
                        });
                    }
                });
        }
    }

</script>