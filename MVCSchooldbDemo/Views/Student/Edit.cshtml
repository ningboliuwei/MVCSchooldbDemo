@using MVCSchooldbDemo.Common
@using MVCSchooldbDemo.Models.Data
﻿@model MVCSchooldbDemo.Models.Data.StudentInfo

@{
    Layout = "~/Views/Shared/LayoutEditor/_LayoutEditorEdit.cshtml";
}

@Html.Partial("_PartialEditor", Model as StudentInfo)
<script>
    $(function() {
        DisableControls('#Sno');

        $('#btnOK')
            .bind('click',
                function() {
                    EditorSubmit('@Url.Action("Edit", "Student")', window.GetData(), "确认修改记录吗？", '修改记录出现错误');
                });
    });
</script>