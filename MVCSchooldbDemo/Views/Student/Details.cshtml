﻿@model MVCSchooldbDemo.Models.Data.StudentInfo
@{
    Layout = null;
}

<div class="editorLayout">
    @Html.Partial("~/Views/Student/_StudentEditor.cshtml")
    @Html.Partial("~/Views/Shared/LayoutEditor/_ButtonsForDetails.cshtml")
</div>

<script>
    $(function() {
//need disable & enable next and previous buttons

        $('#btnPrevious')
            .bind('click',
                function() {
                    if (window.previousId !== -1) {
                        window.ShowData('@Url.Action("GetStudentData", "Student")' + '/' + window.previousId);
                    }
                });

        $('#btnNext')
         .bind('click',
             function () {
                 if (window.nextId !== -1) {
                     window.ShowData('@Url.Action("GetStudentData", "Student")' + '/' + window.nextId);
                 }
             });
    });
</script>