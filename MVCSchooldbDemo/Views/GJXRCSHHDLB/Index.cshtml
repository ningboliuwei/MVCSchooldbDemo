    function Search() {
        var queryData = {
            字段1: $('#GJXRCSHHDLB_Search_字段1').textbox('getText'),
            字段2: $('#GJXRCSHHDLB_Search_字段2').textbox('getText'),
            字段3: ($('#GJXRCSHHDLB_Search_字段3').textbox('getText') === 'ALL') ? '' : $('#GJXRCSHHDLB_Search_字段3').textbox('getText')
        };

        BindGrid('#gridGJXRCSHHDLB',
            '#tbGJXRCSHHDLB',
            url,
            columns,
            gridTitle,
            gridSortName,
            gridSortOrder,
            { queryParasString: JSON.stringify(queryData) });
    }

    function ClearSearch() {
        $('#GJXRCSHHDLB_Search_字段1').textbox('clear');
        $('#GJXRCSHHDLB_Search_字段2').textbox('clear');

        var data = $('#GJXRCSHHDLB_Search_字段3').combobox('getData');
        $('##GJXRCSHHDLB_Search_字段3').combobox('select', data[0]["text"]);

        BindGrid('#gridGJXRCSHHDLB',
            '#tbGJXRCSHHDLB', url, columns, gridTitle, gridSortName, gridSortOrder, {});
    }
</script>
