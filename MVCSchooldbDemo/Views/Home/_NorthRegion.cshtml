<div id="header">
    <div class="navBar">
        <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'zmdi zmdi-home zmdi-24px',size:'large'">首页</a>
        <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'zmdi zmdi-account zmdi-24px',size:'large'">@Session["account"]</a>
        <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'zmdi zmdi-power zmdi-24px',size:'large'" onclick="logout()">注销</a>
    </div>
</div>
<script>
    function logout() {
        var url = '@Url.Action("Logout", "Home")';
        Confirm("确认",
            "确认要注销吗？",
            function() {
                $.ajax({
                    url: url,
                    type: "POST",
                    success: function(rs) {
                        if (rs === "1") {
                            window.location.href = '@Url.Action("Login", "Home")';
                        }
                    }
                });
            });
    }
</script>