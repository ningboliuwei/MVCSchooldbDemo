@model MVCSchooldbDemo.Models.Data.PatientInfo
@{
    Layout = null;
}
<div class="editorLayout">
    @Html.Partial("~/Views/Patient/_Editor.cshtml")
    @Html.Partial("~/Views/Shared/LayoutEditor/_ButtonsForDetails.cshtml")
</div>

<script>
    $(function() {
//need disable & enable next and previous buttons

        $('#Patient_btnPrevious')
            .bind('click',
                function() {
                    if (window.previousId !== -1) {
                        window.ShowData('@Url.Action("GetSingleItem", "Patient")' + '/' + window.previousId);
                    }
                });

        $('#Patient_btnNext')
         .bind('click',
             function () {
                 if (window.nextId !== -1) {
                     window.ShowData('@Url.Action("GetSingleItem", "Patient")' + '/' + window.nextId);
                 }
             });
    });
</script>
