@model MVCSchooldbDemo.Models.Data.XZKFYDCFInfo
@{
    Layout = null;
}
<div class="editorLayout">
    @Html.Partial("~/Views/XZKFYDCF/_Editor.cshtml")
    @Html.Partial("~/Views/Shared/LayoutEditor/_ButtonsForDetails.cshtml")
</div>

<script>
    $(function() {
//need disable & enable next and previous buttons

        $('#XZKFYDCF_btnPrevious')
            .bind('click',
                function() {
                    if (window.previousId !== -1) {
                        window.ShowData(`@Url.Action("GetSingleItem", "XZKFYDCF")/${window.previousId}`);
                    }
                });

        $('#XZKFYDCF_btnNext')
            .bind('click',
                function() {
                    if (window.nextId !== -1) {
                        window.ShowData(`@Url.Action("GetSingleItem", "XZKFYDCF")/${window.nextId}`);
                    }
                });
    });
</script>