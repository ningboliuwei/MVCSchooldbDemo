@model MVCSchooldbDemo.Models.Data.BADLInfo
@{
    Layout = null;
}
<div class="editorLayout">
    @Html.Partial("~/Views/BADL/_Editor.cshtml")
    @Html.Partial("~/Views/Shared/LayoutEditor/_ButtonsForCreate.cshtml")
</div>
<script>
    $(function() {
        $('#BADL_btnOK')
            .bind('click',
                function() {
                    EditorSubmit('#formBADL',
                        '#gridBADL',
                        '#editorBADL',
                        '@Url.Action("Create", "BADL")',
                        window.GetData(),
                        "确认添加记录吗？",
                        '添加记录出现错误');
                }
            );
    });
</script>